[Unit]
Description=hound-operations
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill hound-operations
ExecStartPre=-/usr/bin/docker rm -f hound-operations
ExecStartPre=/usr/bin/docker pull etsy/hound
ExecStart=/usr/bin/docker run -p 6086:6080 --name hound-operations -v /srv/hound/hound-operations:/data etsy/hound
ExecStop=/usr/bin/docker stop hound-operations

[Install]
WantedBy=multi-user.target
